{
    "manifest_version": 3,
    "name": "Youtube Comments Overlay",
    "description": "Watch YouTube videos while reading the comments.",
    "version": "1.0.0",
    "action": {
      "default_popup": "index.html"
    },
    "permissions": [
      "scripting",
      "tabs"
    ],
    "content_scripts": [
      {
        "matches": ["https://www.youtube.com/*"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ],
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "icons": {
      "128": "youtube-comment.png"
    }
  }