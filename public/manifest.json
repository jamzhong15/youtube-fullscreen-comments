{
    "manifest_version": 3,
    "name": "Youtube Fullscreen Comments",
    "version": "1.0.0",
    "action": {
      "default_popup": "index.html"
    },
    "permissions": [
      "scripting"
    ],
    "host_permissions": [
      "https://www.youtube.com/*",
      "https://youtu.be/*"
    ],
    "content_scripts": [
      {
        "matches": ["https://www.youtube.com/*"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ]
  }